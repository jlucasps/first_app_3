<!-- Modal -->
<div class="modal fade" id="modal_new_bill" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Nova conta</h4>
      </div>

      <div id='form_modal'>
        <%= render partial: 'bills/form_modal',
                   locals: {bill: bill, users: users}  %>
      </div>

    </div>
  </div>
</div>